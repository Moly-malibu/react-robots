{
  "name": "react-robots",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "5.9.1",
    "npm": "3.7.3"
  },
  "scripts": {
    "db-seed": "node ./db/seed.js",
    "build": "webpack --config ./webpack.config.js --progress --colors",
    "scrape": "node helpers/scrape.js",
    "start": "node ./bin/www",
    "start-test": "NODE_ENV=test node ./bin/www",
    "start-debug": "DEBUG=react-robots:* npm start",
    "start-watch": "nodemon ./bin/www",

    "test": "NODE_ENV=test mocha --recursive",
    "test-api": "NODE_ENV=test mocha test/api/ --recursive",
    "test-components": "NODE_ENV=test mocha test/components/ --recursive",
    "test-table": "NODE_ENV=test mocha test/components/table_test.js",
    "test-form": "NODE_ENV=test mocha test/components/form_test.js",
    "test-form-submit": "NODE_ENV=test mocha test/components/form_submit_test.js",

    "postinstall": "npm run build",
    "heroku-prebuild": "echo 'This runs before Heroku installs your dependencies.'",
    "heroku-postbuild": "npm run db-seed"
  },
  "dependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "body-parser": "~1.13.2",
    "bootstrap": "^3.3.6",
    "cookie-parser": "~1.3.5",
    "css-loader": "^0.23.1",
    "debug": "~2.2.0",
    "ejs": "~2.3.3",
    "express": "~4.13.1",
    "file-loader": "^0.8.5",
    "jquery": "^2.2.4",
    "json-loader": "^0.5.4",
    "moment-timezone": "^0.5.4",
    "mongoose": "^4.4.19",
    "morgan": "~1.6.1",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-router": "^2.4.0",
    "serve-favicon": "~2.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "expect": "^1.20.1",
    "mocha": "^2.5.3",
    "selenium-webdriver": "^2.53.2",
    "supertest": "^1.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
